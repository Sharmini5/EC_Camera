<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.AppCompat.NoActionBar">
        <item name="android:textAllCaps">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="windowActionModeOverlay">true</item>

    </style>
    <style name="EditTextStyleMobile" parent="Theme.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColorHint">#4DD2D2D2</item>
    </style>

    <style name="keyboard_key">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <color name="text_color_hint">#363535</color>
    <color name="edit_text_color_selector">#504F4F</color>
</resources>