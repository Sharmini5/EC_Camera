<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/button_1"
                style="@style/keyboard_key"
                android:background="@drawable/key_1" />

            <Button
                android:id="@+id/button_2"
                style="@style/keyboard_key"
                android:background="@drawable/key_2" />

            <Button
                android:id="@+id/button_3"
                style="@style/keyboard_key"
                android:background="@drawable/key_3" />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_delete"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:background="@drawable/keydelete" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/button_4"
                style="@style/keyboard_key"
                android:background="@drawable/key_4" />

            <Button
                android:id="@+id/button_5"
                style="@style/keyboard_key"
                android:background="@drawable/key_5" />

            <Button
                android:id="@+id/button_6"
                style="@style/keyboard_key"
                android:background="@drawable/key_6" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/button_7"
                style="@style/keyboard_key"
                android:background="@drawable/key_7" />

            <Button
                android:id="@+id/button_8"
                style="@style/keyboard_key"
                android:background="@drawable/key_8" />

            <Button
                android:id="@+id/button_9"
                style="@style/keyboard_key"
                android:background="@drawable/key9" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                style="@style/keyboard_key"
                android:orientation="horizontal" />

            <Button
                android:id="@+id/button_0"
                style="@style/keyboard_key"
                android:background="@drawable/key_0" />


        </LinearLayout>

    </LinearLayout>

</merge>